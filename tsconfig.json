{
  "include": ["src"],
  "compilerOptions": {
    "lib": ["ES2021", "DOM"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "esnext",
    "resolveJsonModule": true,
    "target": "ES2021",
    "noImplicitThis": false,
    "strict": true,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "."
  },
  "ts-node": {
    "swc": true
  }
}
